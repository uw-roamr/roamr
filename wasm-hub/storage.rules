rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /wasm-files/{userId}/{fileId}/{fileName} {
      // Allow read if file is public (checked via metadata) or user is owner
      // Note: For proper public/private checks, the app validates via Firestore
      allow read: if request.auth != null || true;

      // Only authenticated users can write to their own directory
      // File must be .wasm and under 50MB
      allow write: if request.auth != null &&
                     request.auth.uid == userId &&
                     request.resource.size < 50 * 1024 * 1024 &&
                     request.resource.contentType == 'application/wasm';

      // Only owner can delete their files
      allow delete: if request.auth != null &&
                      request.auth.uid == userId;
    }
  }
}
